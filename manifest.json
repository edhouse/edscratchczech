{
  "name": "EdScratchCzech",
  "version": "1.10",
  "description": "Translate EdScratch blocks into Czech",
  "manifest_version": 3,
  "icons": {
    "128": "icon.png"
  },
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "block_rules.json"
    }]
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://*.edscratchapp.com/*"
  ], 
  "content_scripts": [
    {
      "matches": [
        "*://*.edscratchapp.com/v2*",
        "*://cloud.edscratchapp.com/*"
      ],
      "js": [
        "translate_dom.js"
      ]
    },
    {
      "matches": [
        "*://*.edscratchapp.com/v3*"
      ],
      "js": [
        "add_czech_language.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "blockly_compressed_vertical_czech.js",
        "blocks_compressed_vertical_czech.js",
        "blocks_compressed_vertical_czech_v3.js",
        "errorMessages_czech.js",
        "messages_czech_v3.js",
        "scratch_msgs_czech.js",
        "plugin_images/cs-flag.png"
      ],
      "matches": [
        "*://*.edscratchapp.com/*"
      ]
    }
  ]
}
